<div class="container row justify-content-center col-12 col-lg-6">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: %w[chinese italian japanese french belgian] %>
    <%= f.submit "Submit Restaurant", class: "btn btn-primary" %>
  <% end %>
</div>