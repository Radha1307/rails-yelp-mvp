<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-12"> 
      <div class="col-lg-6">
      <h1>Restaurants</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Category</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @restaurants.each do |restaurant| %>
            <tr>
              <td><%= restaurant.name %></td>
              <td><%= restaurant.address %></td>
              <td><%= restaurant.phone_number %></td>
              <td><%= restaurant.category %></td>
              <td><%= link_to 'Show', restaurant_path(restaurant) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <br>
      <%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>